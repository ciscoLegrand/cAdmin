



<div class="my-5 mx-5 searcher is-hidden-touch">
  <%= form_tag dashboard_path, method: :get do %>
    <div class="field is-horizontal has-addons">
      <div class="field-body">
        <div class="field">
          <div class="control is-expanded has-icons-right">
            <%= text_field_tag :q ,params[:q], class: 'input'%>
            <%= inline_svg_tag('cadmin/icons/ico-search.svg', class: 'icon is-small is-right has text-dark') %>
          </div>
        </div>
        <div class="field">
          <%= button_tag(type:"submit", class: "button is-primary") do %>
            Buscar <%= inline_svg_tag('cadmin/icons/ico-document-search.svg', class: 'icon is-16x16 has-text-white ml-4')%>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<div class="columns is-multiline is-justify-content-center">
<% @tracks.each do |track| %>
<div class="card column is-2 mx-2">
  <div class="card-image">
    <figure class="image is-4by3">
      <%= image_tag track.image, loading: :lazy%>
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-content">
        <p class="title is-4"><%= track.name.truncate(27)%></p>
        <p class="subtitle is-6"><%= track.artist %></p>
          <iframe src="https://open.spotify.com/follow/1/?uri=spotify:artist:6sFIWsNpZYqfjUpaCgueju&size=detail&theme=light" width="100%" height="56" scrolling="no" frameborder="0" style="border:none; overflow:hidden;" allowtransparency="true"></iframe>
      </div>
    </div>

    <div class="content">      
      <audio controls style="width:100%;" preload="none">
        <source src="<%= track.preview%>" type='audio/ogg; codecs=vorbis'>
        <span class="tag is-danger has-text-white">Your user agent does not support the HTML5 Audio element.</span>
      </audio>
    </div>
  </div>
</div>
<% end %>
</div>
