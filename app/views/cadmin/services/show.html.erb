<!-- slider images -->
<section class="section  service pt-1">
  <h1 class="title is-size-1-desktop has-text-centered is-fullwidth"><%= @service.name  %></h1>
  <div class="columns is-multiline is-mobile px-3 is-jsutify-content-space-between">
    <div class="column is-7">
      <figure class="image is-5by3">
        <%= image_tag @service.image_url if @service.image %>
      </figure>
      <div class="mt-5">TODO: Slider de imagenes</div>
      <hr class="has-background-white-ter">
    </div>
    <div class="column is-4 is-flex-direction-column">
      <div class="mb-3">
        <%= @service.short_dscription %>
      </div>
      <div class="is-size-5-desktop is-size6-touch my-3">
        <%= @service.price %>
      </div>
      <div class="is-flex is-justify-content-space-between my-4">
      <%= button_to 'Add!', add_to_cart_path(@service), class: 'button is-info  is-fullwidth ' %>
      <%= button_to 'Buy Stripe!', checkout_create_path, params: { id: @service.id }, remote: true, data: {controller: 'stripe' }, class:'button is-link is-fullwidth' %> <!--TODO: DELETE BUTTON WHEN COMPLETE FEAT -->  
      </div>

      <div class="service__content">
        <h4 class="subtitle is-size-4-destop is-size-5-touch mb-2">TODO: description</h4>
        <%= @service.description %>
      </div>
      <hr class="has-background-white-ter">
      <h4 class="subtitle is-size-4-destop is-size-5-touch">TODO: dropdown features</h4>
      <div class="service__content">
      <%= raw @service.features %>
      </div>
    </div>
  </div>
</section>



