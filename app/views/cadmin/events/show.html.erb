<% if @event.employee_id == current_cadmin_user.id%>
  <%#= @event.interview.inspect%>
  <%= link_to "#{t '.interview'}", @event.interview.present? ? edit_event_interview_path(@event, @interview)  : new_event_interview_path(@event), class: 'button is-success is-outlined' if   current_cadmin_user.employee? %>
<% end %>
<%= link_to "#{t '.cancel'}", events_path, class: "button has-background-white-ter mx-2" %>



<div class="columns is-mobile is-centered mt-4">
  <div class="card column is-6 m-3" style="height: fit-content;">
    <div class="card-header is-justify-content-space-between">
      <div class="card-header-title "> 
        <h4 class="title is-size-5"><%= @event.customer_name %></h4> 
      </div>
      <div class="p-2 my-2 is-flex  is-flex-direction-column">
        <span class="tag is-<%= @event.type_name %> is-rounded my-2"><%= @event.type_name if current_cadmin_user.employee? %></span>
        <%= @event.number %>
      </div>
    </div>
    <div class="card-content">
      <div class="columns">
        <div class="column is-6">
          <h3 class="title is-size-5"><%= t '.event_title' %></h3>         
          <div class="content">
              <table class="table is-fullwidth is-striped is-hoverable is-fullwidth is-scrollable-touch">
                <tr>
                  <th><%= t '.guests' %></th>
                  <td><%= @event.guests%></td>
                </tr>
                <tr>
                  <th><%= t '.deposit' %></th>
                  <td><%= @event.deposit%></td>
                </tr>
                <tr>
                  <th><%= t '.pendig_amount' %></th>
                  <td><%= number_with_precision(@event.total_services_amount - @event.deposit,precision:2) %> </td>
                </tr>
                <tr>
                  <th><%= t '.total_amount' %></th>
                  <td><%= number_with_precision(@event.total_services_amount, precision: 2) %> </td>
                </tr>
                <tr>
                  <th><%= t '.place_id' %></th>
                  <td> <%= link_to @event.placename, Cadmin::Location.find(@event.place_id) if @event.place_id.present?%> </td>
                </tr>
                <tr>
                  <th><%= t '.date' %></th>
                  <td><%= @event.date  %> </td>
                </tr>
              </table>
          </div>
        </div>
        <div class="column is-6">
          <% if current_cadmin_user.admin? %>
            <h3 class="title is-size-5">Datos del cliente:</h3>
            <div class="content">
              <table class="table is-fullwidth is-striped is-hoverable is-fullwidth is-scrollable-touch">
                <tr>
                  <th><%= t '.name' %></th>
                  <td><%= @event.customer_name%></td>
                </tr>
                <tr>
                  <th><%= t '.last_name' %></th>
                  <td><%= @event.customer_last_name%></td>
                </tr>
                <tr>
                  <th><%= t '.email' %></th>
                  <td><%= @event.customer_email%> </td>
                </tr>
                <tr>
                  <th><%= t '.birthdate' %></th>
                  <td><%= @event.customer_birthdate %></td>
                </tr>
                <tr>
                  <th><%= t '.phone' %></th>
                  <td><%= @event.customer_phone%></td>
                </tr>
                <tr>
                  <th><%= t '.city' %></th>
                  <td><%= @event.customer_city %></td>
                </tr>
                <tr>
                  <th><%= t '.billing_address' %></th>
                  <td> <%= @event.customer_billing_address%></td>
                </tr>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <% if @event.employee_id.present? %>
    <hr>
      <div class="card-content">
        <h4 class="subtitle"><%= t '.employee_title' %></h4>
        <div class="is-flex is-flex-direction-row">
          <figure class="image is-128x128">
            <%= image_tag @event.employee_avatar, class: 'is-rounded' if @event.employee_avatar.present? %>
            <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
          </figure>
          <div class="is-flex is-flex-direction-column is-justify-content-center is-align-items-center" style="width:100%;">
            <span><%= @event.employee_name%></span>
            <span>              
                <%= link_to ("https://api.whatsapp.com/send?phone=#{ @event.employee_phone}" ), class: 'mr-3 is-flex' do %>    
                  <figure class="icon is-medium has-text-primary">
                    <%=inline_svg_tag('cadmin/icons/ico-whatsapp.svg', class:'mr-3')%>
                  </figure>
                  <%= @event.employee_phone%>
                <% end %>   
            </span>          
          </div>
        </div>      
      </div>
    <% end %>
    <hr>

    <div class="card-content">
      <div class="content">
       <h5 class="subtitle is-size-5"> <%= t '.observations' %></h5>
        <%= raw  @event.observations %>
      </div>
      <footer class="card-footer">
        <div class="card-footer-item">
          <div> <%= @event.charged ? 'Pagado' : 'Pendiente'  %> <span class="tag <%= @event.charged ? 'is-success' : 'is-warning'  %> is-size-5"><%= @event.total_amount %>â‚¬</span></div>
        </div>
      </footer>
    </div>  
  </div>
  <%# if 1 == 0 %>
    
  <%# if @event.service_ids %>
    <div class="column is-size-6">
      <h2 class="title is-size-4 has-text-centered"><%= t '.service_title' %></h2>
      <div class="columns is-mobile is-multiline is-centered">
        <% @event.event_services.each do |service| %>
          
            
            <div class="card column is-4 m-3">
              <div class="card-header">
                <div class="card-header-title "> 
                  <div class="title is-size-5 has-text-centered" style="width:100%;"><%= service.service_name %></div> 
                </div>
              </div>
              <div class="card-image">
                <figure class="image is-16by9">
                  <%= image_tag service.service_image_url if service.service_image %>
                </figure>
              </div>
              <hr>
              <div class="card-content">
                <div class="media">
                  <div class="media-content">
                    <p class="subtitle is-6"><%= raw service.service_description  %></p>
                  </div>
                </div>
                <hr>
                <div class="content">
                  <%= service.service_short_dscription%>.
                  <br>
                  <%= service.service_description %>
                  <hr>
                  <div>Precio: <span class="tag is-success is-size-5"><%= service.service_price %></span></div>
                  
                </div>
              </div>  
            </div>         
                
        <% end %>
      </div>
    </div>
  <%# end %>
  <%# end %>
</div>


