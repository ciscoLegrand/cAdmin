
<%= link_to 'New Interview', new_event_interview_path(@event), class: 'button is-success is-outlined' if current_cadmin_user.employee? %>
<div class="columns is-mobile is-centered">
  <div class="card column is-6 m-3" style="height: fit-content;">
    <div class="card-header is-justify-content-space-between">
      <div class="card-header-title "> 
        <h4 class="title is-size-5"><%= @event.customer_name %></h4> 
      </div>
      <div class="p-2 my-2 is-flex  is-flex-direction-column">
        <span class="tag is-<%= @event.type_name %> is-rounded my-2"><%= @event.type_name if current_cadmin_user.employee? %></span>
        <%= @event.number %>
      </div>
    </div>
    <div class="card-content">
      <div class="columns">
        <div class="column is-6">
          <h3 class="title is-size-5">Datos del evento:</h3>         
          <div class="content">
              <table class="table is-fullwidth is-striped is-hoverable is-fullwidth is-scrollable-touch">
                <tr>
                  <th>Invitados:</th>
                  <td><%= @event.guests%></td>
                </tr>
                <tr>
                  <th>Descuento:</th>
                  <td><%= @event.discountnames%></td>
                </tr>
                <tr>
                  <th>Deposito:</th>
                  <td><%= @event.deposit%></td>
                </tr>
                <tr>
                  <th>Total:</th>
                  <td><%= @event.total_amount - @event.deposit %> </td>
                </tr>
              </table>
          </div>
        </div>
        <div class="column is-6">
          <% if current_cadmin_user.admin? %>
            <h3 class="title is-size-5">Datos del cliente:</h3>
            <div class="content">
              <table class="table is-fullwidth is-striped is-hoverable is-fullwidth is-scrollable-touch">
                <tr>
                  <th>Nombre:</th>
                  <td><%= @event.customer_name%></td>
                </tr>
                <tr>
                  <th>Apellidos:</th>
                  <td><%= @event.customer_last_name%></td>
                </tr>
                <tr>
                  <th>Email:</th>
                  <td><%= @event.customer_email%> </td>
                </tr>
                <tr>
                  <th>Cumpleaños:</th>
                  <td><%= @event.customer_birthdate %></td>
                </tr>
                <tr>
                  <th>Teléfono:</th>
                  <td><%= @event.customer_phone%></td>
                </tr>
                <tr>
                  <th>Ciudad:</th>
                  <td><%= @event.customer_city %></td>
                </tr>
                <tr>
                  <th>Dir. facturación:</th>
                  <td> <%= @event.customer_billing_address%></td>
                </tr>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <% if @event.employee_id.present? %>
    <hr>
      <div class="card-content">
        <h4 class="subtitle">Dj Para la boda</h4>
        <div class="is-flex is-flex-direction-row">
          <figure class="image is-128x128">
            <%= image_tag @event.employee_avatar, class: 'is-rounded' if @event.employee_avatar.present? %>
            <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
          </figure>
          <div class="is-flex is-flex-direction-column is-justify-content-center is-align-items-center" style="width:100%;">
            <span><%= @event.employee_name%></span>

            <span>              
                <%= link_to ("https://api.whatsapp.com/send?phone=#{ @event.employee_phone}" ), class: 'mr-3 is-flex' do %>    
                  <figure class="icon is-medium has-text-primary">
                    <%=inline_svg_tag('cadmin/icons/ico-whatsapp.svg', class:'mr-3')%>
                  </figure>
                  <%= @event.employee_phone%>
                <% end %>   
            </span>          
          </div>
        </div>      
      </div>
    <% end %>
    <hr>

    <div class="card-content">
      <div class="content">
       <h5 class="subtitle is-size-5"> Observaciones</h5>
        <%= raw  @event.observations %>
      </div>
      <footer class="card-footer">
        <div class="card-footer-item is-flex-direction-column is-align-items-start"> 
        <% if @event.placename.present? %>
          <div class="subtitle is-size-6">Lugar: <%= link_to @event.placename, Cadmin::Location.find(@event.place_id) if @event.place_id.present?%></div>
        <% end %>
        <span class="">Fecha: <%= @event.date  %> </span>
        </div>
        <div class="card-footer-item">
          <div> <%= @event.charged ? 'Pagado' : 'Pendiente'  %> <span class="tag <%= @event.charged ? 'is-success' : 'is-warning'  %> is-size-5"><%= @event.total_amount %>€</span></div>
        </div>
      </footer>
    </div>  
  </div>
  <% if @event.service_ids %>
    <div class="column is-size-6">
      <h2 class="title is-size-4 has-text-centered"> Servicios contratados.</h2>
      <div class="columns is-mobile is-multiline is-centered">
        <% @event.service_ids.each do |service_id| %>
          <% unless service_id == "" %>
            <% service = Cadmin::Service.find(service_id)   %>
            <div class="card column is-4 m-3">
              <div class="card-header">
                <div class="card-header-title "> 
                  <div class="title is-size-5 has-text-centered" style="width:100%;"><%= service.name %></div> 
                </div>
              </div>
              <div class="card-image">
                <figure class="image is-16by9">
                  <%= image_tag service.image_url if service.image %>
                </figure>
              </div>
              <hr>
              <div class="card-content">
                <div class="media">
                  <div class="media-content">
                    <p class="subtitle is-6"><%= raw service.description  %></p>
                  </div>
                </div>
                <hr>
                <div class="content">
                  <%= service.short_dscription%>.
                  <br>
                  <%= service.description %>
                  <hr>
                  <div>Precio: <span class="tag is-success is-size-5"><%= service.price %></span></div>
                  
                </div>
              </div>  
            </div>         
          <% end %>           
        <% end %>
      </div>
    </div>
  <% end %>
</div>


