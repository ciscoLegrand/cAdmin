<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Number</th>
      <th>Date</th>
      <th>Location</th>
      <th>Total amount</th>
      <th>Start time</th>
      <th>Extra hour</th>
      <th>Employee</th>
      <th>Substitute</th>
      <th>Deposit</th>
      <th>Payment method</th>
      <th>Charged</th>
      <th>Observations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.type %></td>
        <td><%= event.number %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.total_amount %></td>
        <td><%= event.start_time %></td>
        <td><%= event.extra_hour %></td>
        <td><%= event.employee_id %></td>
        <td><%= event.substitute_id %></td>
        <td><%= event.deposit %></td>
        <td><%= event.payment_method %></td>
        <td><%= event.charged %></td>
        <td><%= event.observations %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

