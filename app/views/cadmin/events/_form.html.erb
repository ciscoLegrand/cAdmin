<%= form_with(model: event,  data: {"controller": "quill", "action": "quill#save", turbo: false},html: {class: 'events events__form'}) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h3 class="title is-size-4"><%= t '.title_event' %></h3>
  <hr class="has-background-white-ter">
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <%= form.label :customer_id, class: 'label' %>        
        <div class="control is-expanded">
          <%= form.collection_select :customer_id, Cadmin::User.where(role: 'customer').all, :id ,:name, {prompt: 'Selecciona cliente'}, {  prompt: 'Selecciona usuario',class: "select_inside_col",data: {controller: "slimselect"}} %>
        </div>
      </div>
      <div class="field">
        <%= form.label "#{t '.new_client'}", class: 'label' %>
        <%= link_to new_cadmin_user_invitation_path , class: 'item panel-block is-flex is-justify-content-space-between is-align-items-start',data: {'menu-target': 'link', 'menu-item': 'invite', action: 'click->menu#set_active_menu_item'} do %>
          Crear cliente<%= inline_svg_tag('cadmin/icons/ico-user-add.svg', class:'icon ')%>
        <% end %>
      </div>
    </div>
  </div>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <div class="control">
        <%= form.label :title, class: 'label' %>
        <%= form.text_field :title,placeholder: true, class: 'input' %>
        </div>
      </div>
      <div class="field">
        <%= form.label :date, class: 'label ' %>
        <div class="control is-expanded  has-icons-right">
          <%= form.text_field :date,  autocomplete: "off", class: 'input',placeholder: "#{Time.now.strftime('%d-%m-%Y')}",  data: { controller: "flatpickr",flatpickr_default_date: Time.now,flatpickr_min_date: Time.zone.now, flatpickr_date_format: "Y-m-d", flatpickr_locale: locale } %>
          <%= inline_svg_tag('cadmin/icons/ico-calendar.svg', class: 'icon is-small is-right ')%>
        </div>
      </div>
    </div>
  </div>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <%= form.label :type_name, class: 'label' %>
        <%= form.select :type_name, Cadmin::Event::PERMITED_EVENT, {prompt: 'Selecciona cliente'}, {  prompt: 'Selecciona tipo de evento',class: "select_inside_col",data: {controller: "slimselect"}} %>
      </div>
      <div class="field">
        <div class="control">
        <%= form.label :number, class: 'label' %>
        <%= form.number_field :number, class: 'input' %>
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <%= form.label :place, class: 'label' %>
        <%= form.collection_select :place_id, Cadmin::Location.all, :id ,:name, {}, {  prompt: 'Selecciona localizaciÃ³n',class: "select_inside_col",data: {controller: "slimselect"}} %>
      </div>
      <div class="field">
        <%= form.label :guests, class: 'label' %>
        <%= form.number_field :guests, class: 'input' %>
      </div>

    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <%= form.label :employee_id, class: 'label' %>        
        <div class="control is-expanded">
          <%= form.collection_select :employee_id, Cadmin::User.where(role: 'employee').all, :id ,:name, {prompt: 'Selecciona empleado'}, {  prompt: 'Selecciona usuario',class: "select_inside_col",data: {controller: "slimselect"}} %>
        </div>
      </div>
      <div class="field">
        <%= form.label :deposit, class: 'label' %>
        <%= form.text_field :deposit, class: 'input' %>
      </div>
    </div>
  </div>


    <div class="field">
      <%= form.label :observations, class: 'label' %>
      <div class="control">
      <%= form.hidden_field :observations, class: 'content ',data: {"quill-target": "content"} %>
        <div data-quill-target="editor" class="events__quill is-fullwidth ">
          <%= raw event.observations %>
        </div> 
      </div>
    </div>
    
    <!-- TODO: nested form with stimulus-->
    <hr class="has-background-white-ter">
    <h3 class="title is-size-4"><%= t '.title_services' %></h3>
    <div data-controller="nested-form">
      <template data-nested-form-target="template">
        <%= form.fields_for :event_services, event.event_services.new, child_index: 'TEMPLATE_RECORD' do |event_service| %>
          <%= render 'event_service_fields', form: event_service %>
        <% end %>
      </template>
      
      <%= form.fields_for :event_services do |event_service| %> 
        <%= render 'event_service_fields', form: event_service %> 
      <% end %>      
      
      <div class="actions my-4"  data-nested-form-target="add_item">
        <%= link_to "#{t '.add_item'}", "#",class: 'button is-outlined is-success', data: { action: "nested-form#add_association" } %>
      </div>
      
    </div>

    <div class="actions my-6">
      <%= form.submit "#{t '.create'}", class: "button is-success mx-2" %>
      <%= link_to "#{t '.cancel'}", events_path, class: "button has-background-white-ter mx-2" %>
    </div>
<% end %>