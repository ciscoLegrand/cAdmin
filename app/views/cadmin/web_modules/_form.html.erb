      <div class="column is-2">
        <div class="card ccard">
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <div class="<%= web_module.wire_transfer? ? 'has-background-primary' : 'has-background-tertiary'%> p-2   ccard__rounded">
                  <%= inline_svg_tag("cadmin/icons/ico-paypal.svg", size: '64', class: 'has-text-white  ') %>
                </div>
              </div>
              <div class="media-content is-flex is-flex-direction-column is-align-items-center">
                <%= form.label :wire_transfer, class: 'label' %> 
                <%= form.check_box :wire_transfer, class:"switch" %>
              </div>
            </div>
          </div>
        </div>
      </div>
