<%= form_with(model: web_module) do |form| %>
  <% if web_module.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(web_module.errors.count, "error") %> <%= t('.error_message')%></h2>

      <ul>
        <% web_module.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
