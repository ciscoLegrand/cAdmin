<p id="notice"><%= notice %></p>

<h1>Email Custom Templates</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Email base template</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @email_custom_templates.each do |email_custom_template| %>
      <tr>
        <td><%= email_custom_template.content %></td>
        <td><%= email_custom_template.email_base_template_id %></td>
        <td><%= link_to 'Show', email_custom_template %></td>
        <td><%= link_to 'Edit', edit_email_custom_template_path(email_custom_template) %></td>
        <td><%= link_to 'Destroy', email_custom_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

