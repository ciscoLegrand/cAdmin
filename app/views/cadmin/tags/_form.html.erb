<%= form_with(model: tag,  class: 'article__form') do |form| %>
  <% if tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tag.errors.count, "error") %> <%= t('.error_message')%></h2>

      <ul>
        <% tag.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: 'label' %>
    <%= form.text_field :name, class: 'input is-medium', required: true %>
  </div>
  <div class="actions my-6">
    <%= form.submit "#{t '.create'}", class: "button is-success mx-2" %>
    <%= link_to "#{t '.cancel'}", tags_path, class: "button has-background-white-ter mx-2" %>
  </div>
<% end %>
