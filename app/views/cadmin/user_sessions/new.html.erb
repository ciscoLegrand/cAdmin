<div class="columns login">
  <div class="column is-8-desktop is-hidden-touch">
    <%= inline_svg_tag('cadmin/content/login.svg', class:'login__content') %>
  </div>
  <div class="login__colform column is-4-desktop is-12-touch is-flex is-flex-direction-column is-align-content-center">
    <h2 class="title is-size-3-desktop is-size-5-touch is-family-primary has-text-centered">Registro</h2>
    <%= form_for(resource, as: resource_name, url: login_path, html:{turbo: false, class:'login__logform'}) do |f| %>
      <div class="field login__logform__eigthywidth">
        <%= f.label :email, class: 'login__label is-size-5-desktop' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'login__input' %>
      </div>

      <div class="field login__logform__eigthywidth my-6">
        <%= f.label :password, class: 'login__label is-size-5-desktop' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'login__input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-6">
          <%#= f.label :remember_me, class: 'label'  %>
          <label for="remember_me" class="login__label"> 
            <%= f.check_box :remember_me, class: 'checkbox mr-3' %>Recuerdame 
          </label>
          <%# end %>
          
        </div>
      <% end %>

      <div class="actions is-relative login__logform__eigthywidth ">
        <%= f.submit "Log in", class: 'button login__logform__logbutton is-rounded is-clickable' %>
        <%= link_to '/cadmin/register' , class: 'subtitle is-rounded login__buttons is-clickable' do %>
          Registro <%= inline_svg_tag('cadmin/icons/ico-arrow-right.svg', class: 'login__buttons__arrow')%>
        <% end %>        
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
</div>



