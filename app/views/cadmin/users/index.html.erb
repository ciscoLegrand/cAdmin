
<hr class="has-background-white-ter">
<div class="clearfix"></div>
<%= turbo_frame_tag :users do %>  
  <% if @users.present? %>
    <ul>
      <% @users.each do |users| %>
        <li><%= users.email %> | <%= users.role %></li>  
      <% end %>
    </ul> 
  <% else %>
    <div class="box is-fullwidth">
      <div class="is-flex is-justify-content-center">
        <figure class='image'>
          <%= inline_svg_tag('content/add_friends.svg', size: '250', class: 'has-text-centered')%> <br>
        </figure>
      </div>
      <h3 class="subtitle is-size-5 has-text-centered"> No hay usuarios pendientes </h3>
    </div>
  <% end %>
<% end %>