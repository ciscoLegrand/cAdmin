
<div class="columns is-flex is-justify-content-center">
  <div class="column is-6-desktop is-12-touch has-text-centered">

    <h2 class="has-text-weight-bold">CUENTA</h2>

    <%= form_for(@user,url:  usuarios_editar_path(id: @user.id) , html: { method: :put ,class:'box required-form'}, data: {turbo: false}) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2 class="subtitle is-size-5 has-background-warning has-text-centered has-text-dark"><%= pluralize(@user.errors.count, "error") %> evitaron que se guardase:</h2>

          <ul>
            <% @user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field has-text-left">
        <%= f.label :username , class:'label' %>
        <%= f.text_field :username , autofocus: true, autocomplete: "username", class:'input' %>
      </div>

      <div class="field has-text-left">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email,  class: "input" %>
      </div>

      
      <% if 1==0 %>
        <div class="field has-text-left">
          <%= f.label :password, value: "Contraseña", class:'label' %> <i>(déjela en blanco si no quiere cambiarla)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
          <% if @minimum_password_length %>
          <% end %>
        </div>

        <div class="field has-text-left">
          <%= f.label :password_confirmation, value: "Confirmar contraseña", class:'label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
        </div>        
      <% end %>

      <div class="actions is-flex is-justify-content-center">
        <%= f.submit "#{ t '.update'}", class: "button is-success mx-2" %>

        <%= link_to "#{ t '.back'}", cadmin_users_active_path, class: "button has-background-white-ter mx-2" %>
      </div>
    <% end %>

  </div>
</div>