

<%= link_to 'New Article', new_article_path %>

<div class="columns is-multiline is-mobile">
    <% @articles.each do |article| %>
      <div class="card column is-3">
        <div class="card-image">
          <figure class="image is-16by9 mb-6">
            <%= image_tag article.image_url if article.image %>
          </figure>
        </div>
        <div class="card-content">
          <div class="media">
            <div class="media-left">
              <figure class="image is-48x48">
                <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
              </figure>
            </div>
            <div class="media-content">
              <p class="title is-4"><%= article.name%></p>
              <p class="subtitle is-6"><%= "@#{article.username}"%></p>
            </div>
          </div>

          <div class="content">
            <h2 class="title is-size-4"><%= link_to article.title, article %></h2>
            <div class="has-text-left"><%= article.content.truncate(100, separator: /\n/)%></div>
            <br>
            <time datetime="<%= article.created_at.strftime('%d-%m-%y')%>">Publicado el: <%= article.created_at.strftime('%d-%m-%y')%></time>
          </div>
        </div>
          <footer class="card-footer">
            <a href="#" class="card-footer-item"><%= link_to 'Show', article %></a>
            <a href="#" class="card-footer-item"><%= link_to 'Edit', edit_article_path(article) %></a>
            <a href="#" class="card-footer-item"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></a>
          </footer>
      </div>
    <% end %>
</div>




